
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1470337458703-46ad1756a187?auto=format&fit=crop&w=749&q=60&ixid=dW5zcGxhc2guY29tOzs7Ozs%3D');">
  <div class="banner-content">
    <h1>Cocktails Club</h1>
    <p>Which cocktail would you like to make today?</p>

  </div>
</div>

<div class="container">
  <div class="row">

  <% @cocktails.each do |cocktail| %>

    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image:linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1453825012366-3738046cb6c7?auto=format&fit=crop&w=889&q=60&ixid=dW5zcGxhc2guY29tOzs7Ozs%3D');">
        <div class="card-category"></div>
        <div class="card-description">
          <h2><%= cocktail.name %></h2>
          <p></p>
        </div>

        <%= link_to '', cocktail_path(cocktail), class:'card-link'%>
      </div>
    </div>
  <% end %>

  </div>
</div>

<%= link_to "Add a cocktail", new_cocktail_path %>
